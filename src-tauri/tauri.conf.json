{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenReelio",
  "version": "0.1.0",
  "identifier": "dev.openreelio.app",
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDMwNTI4Q0JDNjFEOTAxMUMKUldRY0FkbGh2SXhTTUdVYityV2x3d0lscGpKN0FuT1VjYnVFRFRhUmtaczJjODdFZmpzcjlKakcK",
      "endpoints": [
        "https://github.com/openreelio/openreelio/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "OpenReelio",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": "default-src 'self' data: blob:; img-src 'self' asset: http://asset.localhost data: blob:; media-src 'self' asset: http://asset.localhost data: blob:; script-src 'self'; style-src 'self' 'unsafe-inline';",
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPCACHE/**", "$APPLOCALDATA/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "binaries/*": "binaries/"
    },
    "windows": {
      "certificateThumbprint": null,
      "timestampUrl": "http://timestamp.digicert.com",
      "digestAlgorithm": "sha256",
      "wix": null,
      "nsis": {
        "compression": "lzma",
        "displayLanguageSelector": false,
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser"
      }
    },
    "macOS": {
      "signingIdentity": null,
      "entitlements": null,
      "minimumSystemVersion": "10.15"
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "category": "DeveloperTool",
    "shortDescription": "AI-powered video editing IDE",
    "longDescription": "OpenReelio is an AI agent-driven, prompt-based video editing IDE. Like Claude Code or Cursor AI, it enables video editing through conversational prompts.",
    "copyright": "Copyright (c) 2024-2026 OpenReelio Contributors",
    "publisher": "OpenReelio"
  }
}
